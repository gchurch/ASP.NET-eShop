@model ApplicationCore.Models.Basket

@{
    ViewData["Title"] = "Basket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Style {
    <link rel="stylesheet" href="/css/basket.css" />
}

<h1>Basket</h1>

<div>
    <p id="priceHeading">Price</p>
    <div id="basket">
        @foreach (var b in Model.BasketItems)
        {
            <div class="basketItem">
                <div>
                    <img src="images/@b.Product.ImageUrl" />
                </div>
                <div>
                    <p id="productTitle"><a href="/Products/Details/@b.Product.ProductId">@b.Product.Title</a></p>
                    <p id="productSeller">Sold by: @b.Product.Seller</p>
                    <p id="productQuantity">Quantity in basket: @b.ProductQuantity</p>
                    <button type="button" onclick="RemoveProductFromBasket(@b.ProductId)">Remove</button>
                </div>
                <div>
                    <p id="productPrice">£@b.Product.Price</p>
                </div>
            </div>
        }
    </div>
    <p id="summary">Subtotal (@Model.CalculateTotalNumberOfProducts() items): <span>£@Model.CalculateTotalCost()</span></p>
</div>