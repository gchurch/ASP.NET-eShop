@model IEnumerable<Ganges.ApplicationCore.Entities.Product>

@{
    ViewData["Title"] = "Products";
}

@section Style {
    <link rel="stylesheet" href="/css/index.css" />
}

<h1>Products</h1>

<p>These products have been fetched from the database.</p>

<a asp-action="Create">Create a product.</a>

<div id="products">
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <div>
                    <a asp-action="Details" asp-route-id="@item.Id"><img src="images/@Html.DisplayFor(modelItem => item.ImageUrl)" /></a>
                </div>

                <div>
                    <p id="productTitle">
                        <a asp-action="Details" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.Title)
                        </a>
                    </p>
                    <p id="productSeller">Seller: @Html.DisplayFor(modelItem => item.Seller)</p>
                    <p id="productPrice">
                        <a asp-action="Details" asp-route-id="@item.Id">
                            £@Html.DisplayFor(modelItem => item.Price)
                        </a>
                    </p>
                    <p id="productDelivery">FREE Delivery</p>
                </div>
            </li>
        }
    </ul>
</div>