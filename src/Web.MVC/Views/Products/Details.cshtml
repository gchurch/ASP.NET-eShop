@model ApplicationCore.Entities.Product

@{
    ViewData["Title"] = "Details";
}

@section Style {
    <link rel="stylesheet" href="/css/details.css" />
}

<div id="product">
    <div>
        <div class="column">
            <img src="/images/@Html.DisplayFor(model => model.ImageUrl)" />
        </div>
        <div class="column">
            <p id="productTitle">
                @Html.DisplayFor(model => model.Title)
            </p>

            <p id="productPrice">
                Price: <span>£@Html.DisplayFor(model => model.Price)</span>
            </p>

            <p id="productQuantity">
                @Html.DisplayFor(model => model.Quantity) <span>in stock</span>
            </p>

            <p id="productDescription">
                <span>About this product</span><br />
                @Html.DisplayFor(model => model.Description)
            </p>

            <p id="productSeller">
                Seller: <span>@Html.DisplayFor(model => model.Seller)</span>
            </p>
        </div>
    </div>
</div>

<p><a asp-action="Edit" asp-route-id="@Model.Id">Edit</a></p>
<p><a asp-action="Delete" asp-route-id="@Model.Id">Delete</a></p>
